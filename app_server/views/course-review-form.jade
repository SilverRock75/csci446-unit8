extends layout

block content
  .row.page-header
    .col-lg-12
      h1= 'Add assignemnt for '+pageHeader.class
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/course", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="duedate") Duedate
          .col-xs-12.col-sm-10
            input#name.form-control(name="duedate")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="point") Points
          .col-xs-12.col-sm-10
            input#name.form-control(name="point")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="status") Status
          .col-xs-12.col-sm-4
            select#rating.form-control.input-sm(name="status")
              option Not Started
              option In Progress
              option Complete
              option Submitted
        button.btn.btn-default.pull-right Add new assignment
    .col-xs-12.col-md-4
